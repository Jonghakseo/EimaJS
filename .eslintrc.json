{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "extends": [
    "airbnb",
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:react-hooks/recommended"
  ],
  "parser": "@babel/eslint-parser",
  "plugins": ["prettier"],
  "rules": {
    "quotes": ["error", "double", { "avoidEscape": true }],
    "linebreak-style": ["error", "unix"],
    "no-empty-function": "off",
    "semi": ["error", "always"],
    "react/prop-types": "off"
  }
}
